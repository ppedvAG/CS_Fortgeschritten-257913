<Window x:Class="AsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen">
	<StackPanel>
		<Button Click="Button_Click" Content="Start"/>
		<Button Click="Button_Click_1" Content="Request" Name="ReqButton"/>
		<Button Click="Button_Click_2" Content="Async Data Source"/>
		<ProgressBar IsIndeterminate="True" Height="20"/>
		<TextBlock Name="Output" Height="350"/>
	</StackPanel>
</Window>
